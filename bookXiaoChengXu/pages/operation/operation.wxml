<!--pages/operation/operation.wxml-->
<view class='container'>
  <form bindsubmit='formSubmit' bindreset='formReset'>
    <view class='row'>
      <text>书名</text>
      <input type='text' name='bookName' placeholder='请输入书名' value='{{bookName}}'></input>
    </view>

     <view class='row'>
      <text>作者</text>
      <input type='text' name='author' placeholder='请输入作者' value='{{author}}'></input>
    </view>

     <view class='row'>
      <text>价格</text>
      <input type='number' name='price' placeholder='请输入价格' value='{{price}}'></input>
    </view>

    <view class='row'>
        <button type='primary' form-type='submit'>提交</button>
        <button type='primary' form-type='reset'>清空</button>
    </view>
  </form>
</view>